<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AionRh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AionRhC_.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Botão de abrir Sidebar -->
    <header style="background-color: #6d197b;">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-menu" onclick="openNav()"><i class="bi bi-list" style="color:white;"></i></button>
                <button class="btn btn-logout" onclick="logout()">
                </button>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <div style="background-color:#6d197b; height:50px;" class="sidebar-header">
            <div>
          @*       <h3 style="text-align: center; color: white; padding-top: 5px;"><strong>Aión</strong>RH</h3> *@
                <a asp-area="" asp-controller="Home" asp-action="Index" style="color:white; text-align: center; padding-top: 5px;"><h1><strong>Aión</strong>RH</h1></a>
            </div>
        </div>

        <a asp-area="" asp-controller="Colaborador" asp-action="Index" style="color:black;">Colaboradores</a>
        <hr />
        <a asp-area="" asp-controller="Contratos" asp-action="Index" style="color:black;">Contratos</a>
        <hr />
    </div>

    <div class="container main-content" id="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 -  Coordenação de Avanço Tecnológico e Comunicação - CTI/SUPEL - AIONRH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Função para abrir a sidebar
        function openNav() {
            document.getElementById("mySidebar").classList.add("sidebar-open");
        }

        // Fechar a sidebar quando clicar fora dela
        document.addEventListener('click', function (event) {
            var sidebar = document.getElementById('mySidebar');
            var button = document.querySelector('.btn-menu');

            // Verifica se o clique foi fora da sidebar e do botão
            if (!sidebar.contains(event.target) && !button.contains(event.target)) {
                sidebar.classList.remove('sidebar-open');
            }
        });
    </script>
</body>
</html>