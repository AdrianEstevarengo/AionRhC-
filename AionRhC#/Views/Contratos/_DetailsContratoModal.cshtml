@using Domain.Enums
@model AionRhC_.Models.ContratosViewModel

<div class="modal fade" id="atividadeDetalhesModal" tabindex="-1" role="dialog"
    aria-labelledby="atividadeDetalhesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="atividadeDetalhesModalLabel">Detalhes do contrato: @Html.DisplayFor(model => model.NumeroProcesso)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <dl class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.NumeroProcesso)</dt>
                                <dd class="col">@Html.DisplayFor(model => model.NumeroProcesso)</dd>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.PagamentoSigef)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.PagamentoSigef)</dd>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.PrazoComissao)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.PrazoComissao)</dd>
                            </div>
                        </div>
                    </dl>

                    <dl class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.PrazoPagamento)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.PrazoPagamento)</dd>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.PrazoParaLiquidacao)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.PrazoParaLiquidacao)</dd>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.RecebimentoDefinitivo)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.RecebimentoDefinitivo)</dd>
                            </div>
                        </div>
                    </dl>
                   

                    <dl class="row">
                      
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.RecebimentoNf)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.RecebimentoNf)</dd>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <dt class="col-sm-12">@Html.DisplayNameFor(model => model.Observacoes)</dt>
                                <dd class="col-sm-12">@Html.DisplayFor(model => model.Observacoes)</dd>
                            </div>
                        </div>
                    </dl>
                  
                </div>
            </div>
        </div>
    </div>
</div>
